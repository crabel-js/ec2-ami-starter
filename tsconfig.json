{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "sourceMap": true,
    "inlineSources": true,
    "preserveSymlinks": true,
    "declaration": false,
    "experimentalDecorators": true,
    "incremental": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules/**",
    "**/dist/**"
  ]
}